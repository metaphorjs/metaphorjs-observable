{
    "version": "1.2",
    "description": "A javascript event system",

    "docs": {

        "out": "docs",

        "renderer": {
            "type": "default",
            "data": {
                "title": "MetaphorJs.Observable",
                "description": "A javascript event system",
                "version": "v1.2"
            }
        },
        
        "src": [
            "src/**"
        ],
        "includeExternal": false,
        
        "export": {
            "sort": {
                "type": "exact",
                "order": [
                    "class:Observable", 
                    "mixin:Observable", 
                    "class:ObservableEvent"
                ]
            }
        }
    },


    "build": {
        "standalone": {
            "target": "dist/metaphorjs.observable.js",
            "files": [
                ["metaphorjs/src/MetaphorJs.js", {"as": "*"}],
                ["src/lib/Observable.js", {"as": "*"}]
            ],
            "options": {
                "wrap": true,
                "global": true,
                "expose": [
                    "Observable"
                ]
            }
        },

        "standalone-min": {
            "extend": "standalone",
            "target": "dist/metaphorjs.observable.min.js",
            "pipe": ["build", "compile", "write"],
            "options": {
                "wrap": true,
                "global": true,
                "return": "Observable",
                "expose": [
                    "Observable"
                ]
            }
        },

        "npm": {
            "target": "dist/metaphorjs.observable.npm.js",
            "compile": false,
            "files": [
                [
                    "src/lib/Observable.js"
                ]
            ],
            "options": {
                "exports": "Observable"
            }
        },

        "amd": {
            "target": "dist/metaphorjs.observable.amd.js",
            "files": [
                ["src/lib/Observable.js", {"as": "*"}]
            ],
            "options": {
                "amd": {
                    "name": "metaphorjs-observable",
                    "return": "Observable"
                }
            }
        },

        "amd-min": {
            "extend": "amd",
            "pipe": ["build", "compile", "write"],
            "target": "dist/metaphorjs.observable.amd.min.js"
        }
    }
}